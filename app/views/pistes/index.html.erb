<h1>Pistes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
    </tr>
  </thead>
  <tbody>
    <% @pistes.each do |piste| %>
      <tr>
        <td><%= @coder.encode(piste.name, :named).html_safe %> (<%= piste.grade %>)</td>
        <td><%= piste.latest_state %></td>
      </tr>
    <% end %>
  </tbody>
</table>
